{
  "name": "darkfox",
  "description": "DarkFox theme for Ghost CMS",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "scripts": {
    "build:prod": "NODE_ENV=produiction webpack",
    "pack": "npm-pack-zip",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss}\""
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/desktop.jpg",
    "mobile": "assets/mobile.jpg"
  },
  "author": {
    "name": "Dylan Vorster",
    "email": "me@dylanvorster.com",
    "url": "https://dylanvorster.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TryGhost/Casper.git"
  },
  "dependencies": {
    "highlight.js": "^11.8.0"
  },
  "devDependencies": {
    "webpack": "^5.84.1",
    "webpack-cli": "^5.1.1",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "sass-loader": "^13.3.1",
    "sass": "^1.62.1",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "prettier": "^2.8.8",
    "typeface-source-sans-pro": "^1.1.13",
    "npm-pack-zip": "^1.3.0"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "logo_secondary": {
        "type": "image"
      },
      "social_soundcloud": {
        "type": "text"
      },
      "social_youtube": {
        "type": "text"
      },
      "social_twitter": {
        "type": "text"
      },
      "social_spotify": {
        "type": "text"
      }
    }
  },
  "renovate": {
    "extends": [
      "@tryghost:theme"
    ]
  }
}
